# Minecraft Server Manager - Environment Variables
# ================================================
# Bu dosyayı .env olarak kopyalayın ve değerleri doldurun
# cp .env.example .env

# RCON Configuration
RCON_HOST=127.0.0.1
RCON_PORT=25575
RCON_PASSWORD=your_secure_rcon_password_here

# Web Panel
PORT=3000
NODE_ENV=production

# Discord Bot
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_CLIENT_ID=your_client_id_here

# Firebase (opsiyonel - service account dosyası da kullanılabilir)
FIREBASE_PROJECT_ID=your_project_id

# Backup Settings
BACKUP_DIR=/home/minecraft/backups
BACKUP_RETENTION_DAYS=7
BACKUP_DISCORD_WEBHOOK=

# Monitoring (opsiyonel)
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090
